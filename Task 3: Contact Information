import json
import os

CONTACTS_FILE = "contacts.json"

def load_contacts():
    """Load contacts from a JSON file."""
    if os.path.exists(CONTACTS_FILE):
        with open(CONTACTS_FILE, "r") as file:
            return json.load(file)
    return {}

def save_contacts(contacts):
    """Save contacts to a JSON file."""
    with open(CONTACTS_FILE, "w") as file:
        json.dump(contacts, file, indent=4)

def add_contact(contacts):
    """Add a new contact."""
    name = input("Enter name: ").strip()
    phone = input("Enter phone number: ").strip()
    email = input("Enter email: ").strip()
    address = input("Enter address: ").strip()

    if name and phone:
        contacts[name] = {"Phone": phone, "Email": email, "Address": address}
        save_contacts(contacts)
        print(f" Contact '{name}' added successfully!")
    else:
        print(" Name and phone number are required.")

def view_contacts(contacts):
    """Display all contacts."""
    if not contacts:
        print(" No contacts found!")
    else:
        print("\n Contact List:")
        for name, details in contacts.items():
            print(f" {name} - {details['Phone']}")

def search_contact(contacts):
    """Search for a contact by name or phone number."""
    query = input("Enter name or phone number to search: ").strip()
    found = False
    for name, details in contacts.items():
        if query.lower() in name.lower() or query in details["Phone"]:
            print(f"\n Found Contact:\n Name: {name}\n Phone: {details['Phone']}\nüìß Email: {details['Email']}\nüè† Address: {details['Address']}")
            found = True
    if not found:
        print(" No matching contacts found.")

def update_contact(contacts):
    """Update an existing contact."""
    name = input("Enter the name of the contact to update: ").strip()
    if name in contacts:
        print("Enter new details (press Enter to keep existing value):")
        new_phone = input(f"New phone ({contacts[name]['Phone']}): ").strip() or contacts[name]["Phone"]
        new_email = input(f"New email ({contacts[name]['Email']}): ").strip() or contacts[name]["Email"]
        new_address = input(f"New address ({contacts[name]['Address']}): ").strip() or contacts[name]["Address"]

        contacts[name] = {"Phone": new_phone, "Email": new_email, "Address": new_address}
        save_contacts(contacts)
        print(f" Contact '{name}' updated successfully!")
    else:
        print(" Contact not found.")

def delete_contact(contacts):
    """Delete a contact."""
    name = input("Enter the name of the contact to delete: ").strip()
    if name in contacts:
        del contacts[name]
        save_contacts(contacts)
        print(f" Contact '{name}' deleted!")
    else:
        print(" Contact not found.")

def main():
    """Main program loop."""
    contacts = load_contacts()
    
    while True:
        print("\n Contact Management Menu:")
        print("1Ô∏è. Add Contact")
        print("2Ô∏è. View Contact List")
        print("3Ô∏è. Search Contact")
        print("4Ô∏è. Update Contact")
        print("5Ô∏è. Delete Contact")
        print("6Ô∏è. Exit")

        choice = input("Enter choice: ").strip()

        if choice == "1":
            add_contact(contacts)
        elif choice == "2":
            view_contacts(contacts)
        elif choice == "3":
            search_contact(contacts)
        elif choice == "4":
            update_contact(contacts)
        elif choice == "5":
            delete_contact(contacts)
        elif choice == "6":
            print(" Goodbye! Your contacts are saved.")
            break
        else:
            print(" Invalid choice, please try again.")

if __name__ == "__main__":
    main()
